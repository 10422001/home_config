alias web=/Users/dominikocsofszki/.local/bin/awrit

google () {
    web "http://google.com/search?q=$(echo \"$@\" | sd ' ' '+' | sd '"' '')"
}

deepl () {
    web "https://www.deepl.com/translator#de/en/$(echo \"$@\" | sd ' ' ' ' | sd '"' '')"
    # web "https://www.deepl.com/translator#de/en/$(echo \"$@\" | sd ' ' '+' | sd '"' '')"
}

